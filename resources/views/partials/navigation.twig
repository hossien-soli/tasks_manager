
<nav class="navbar navbar-expand-sm navbar-dark bg-dark" >
    <a href="{{ path_for('main.home') }}" class="navbar-brand" >Tasks Manager</a>
    <ul class="navbar-nav mr-auto" >
        <li class="nav-item">
            <a href="{{ path_for('main.home') }}" class="nav-link" >Home</a>
